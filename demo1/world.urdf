	        <origin xyz="0.0 0.0 0.0" rpy="0 0 0" />
	        <geometry>
	            <mesh filename="resources/v groove butt welding piece.obj" scale="1.3 1.3 1.3"/>
	        </geometry>
	    </visual>
	    <visual>
	        <origin xyz="0.005 0.0 0.0" rpy="0 3.1415 0" />
	        <geometry>
	            <mesh filename="resources/v groove butt welding piece.obj" scale="1.3 1.3 1.3"/>
	        </geometry>
	    </visual>
	</static_object>

